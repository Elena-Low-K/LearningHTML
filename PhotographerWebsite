    <script>
      function applyNow() {
        let name = prompt("What's your name?");
        let age = prompt("What's your age?");
        if (age > 12) {
          let email = prompt("What's your email?");
          let type = prompt("What type of photoshoot do you want to request?");
          type = type.toLowerCase();
          if (type === "nature" || type === "portrait") {
            alert(
              "Thank you, " +
                name +
                "! We will contact you at " +
                email +
                " about your " +
                type +
                " photoshoot!"
            );
          } else {
            alert(
              "Thank you, " +
                name +
                "! We will contact you at " +
                email +
                " to discuss your " +
                type +
                " photoshoot idea!"
            );
          }
        } else {
          alert(
            "Sorry, " +
              name +
              ", you must be over 12 to request a photoshoot üò¢"
          );
        }
      }

      let apply = document.querySelector("button");
      apply.addEventListener("click", applyNow);
    </script>
